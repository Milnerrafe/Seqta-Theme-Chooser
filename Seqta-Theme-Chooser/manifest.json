{
  "manifest_version": 3,
  "name": "Seqta Theme Chooser",
  "version": "1.4.0",
  "description": "Choose the Theme you want your Seqta UI to be",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Set Seqta UI Theme"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["https://*.edu.au/*"],
  "content_scripts": [
    {
      "matches": ["https://*.edu.au/*"],
      "js": ["storage.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
